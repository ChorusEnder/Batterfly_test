{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {  
            "name": "jlink",//调试器的名字
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceRoot}\\build\\Batterfly_test.elf",//将编译文件名.elf改为自己已编译的
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "jlink",//所使用的烧录器类型
            "interface": "swd",//所用芯片接口类型
            "svdFile": "STM32F103xx.svd",//查表找对应的对应芯片型号对应的
            "device": "STM32F103C8",//改对应的芯片类型
            // "rtos": "FreeRTOS",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            }
        }
    ]
}
